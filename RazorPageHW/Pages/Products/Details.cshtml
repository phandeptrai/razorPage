@page
@model RazorPageHW.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Category.Name)
        </dd>
    </dl>
</div>

<div>
    <h4>Images</h4>
    <hr />
    @if (Model.Product.ImgProducts.Any())
    {
        <div class="row">
            @foreach (var img in Model.Product.ImgProducts)
            {
                <div class="col-md-4 mb-3">
                    <img src="@img.Path" alt="Product Image" class="img-thumbnail" />
                </div>
            }
        </div>
    }
    else
    {
        <p>No images available for this product.</p>
    }
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
